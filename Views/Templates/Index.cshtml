@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Localization
@model IEnumerable<CourseProject.Models.Template>
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["TemplatesTitle"];
}
<h2>@Localizer["TemplatesTitle"]</h2>
<a asp-action="Create" class="btn btn-primary mb-3">@Localizer["CreateTemplate"]</a>
<table class="table table-striped table-responsive">
    <thead>
    <tr>
        <th>@Localizer["Name"]</th>
        <th>@Localizer["Description"]</th>
        <th>@Localizer["Theme"]</th>
        <th>@Localizer["Public"]</th>
        <th>@Localizer["Actions"]</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var template in Model)
    {
        <tr>
            <td>@template.Name</td>
            <td>@template.Description</td>
            <td>@Localizer[template.Theme]</td>
            <td>@(template.IsPublic ? Localizer["Yes"] : Localizer["No"])</td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @Localizer["Actions"]
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@template.Id">@Localizer["Edit"]</a></li>
                        <li>
                            <form asp-action="Delete" asp-route-id="@template.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item">@Localizer["Delete"]</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>